<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RummyTracker"
        tools:targetApi="31">
<!--        android:theme="@style/Theme.AppCompat.Light.NoActionBar"-->

        <activity
            android:name=".GameMenuActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"/>   <!-- ta parent activity sm mogu določit zato, da integrirani up action/back button v app bar/toolbar/action bar-u ve kam more it-->
        <activity
            android:name=".AddGameActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"/>   <!-- ta parent activity sm mogu določit zato, da integrirani up action/back button v app bar/toolbar/action bar-u ve kam more it-->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
<!--        <activity-->
<!--            android:name=".GameListActivity"-->
<!--            android:label="Game List" />-->
        <activity
            android:name=".PlayerListActivity"
            android:label="Player List"
            android:parentActivityName=".GameMenuActivity" />
        <activity
            android:name=".AddPlayerActivity"
            android:label="Add Player"
            android:parentActivityName=".PlayerListActivity" />
        <activity
            android:name=".InsertPlayerActivity"
            android:label="Insert Player"
            android:parentActivityName=".AddPlayerActivity" />
        <activity
            android:name=".InsertScoreActivity"
            android:label="Insert Score"
            android:parentActivityName=".AddPlayerActivity" />
        <activity
            android:name=".ViewStatsActivity"
            android:label="View Stats"
            android:parentActivityName=".GameMenuActivity" />
        <activity
            android:name=".MostWinsActivity"
            android:label="View Most Wins Stat"
            android:parentActivityName=".ViewStatsActivity" />
        <activity
            android:name=".AverageScoresActivity"
            android:label="View Average Scores Stat"
            android:parentActivityName=".ViewStatsActivity" />
    </application>



</manifest>